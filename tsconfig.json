{
  "compilerOptions": {
    "lib": ["ESNext", "DOM.Iterable"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
